<div class="container-fluid">
  <div class="row">


  </div>
  <div class="not-signup col-sm-12 col-md-6 col-lg-6">
    <h1>Code in the browser with your peers!</h1>
  </div>
   <div class="signup col-sm-12 col-md-6 col-lg-6">

      <div class="welcome-message">
        <p>Start Coding Today for Free!</p>
      </div>
      <div class="sign-up-form">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="email-field">
          <%= f.label :email %><br />
          <%= f.email_field :email,  :class => 'form-control' %>
        </div>
        </br>

        <div class="input-group">
          <span class="input-group-addon">Password</span>
          <%= f.password_field :password,  :class => 'form-control', :placeholder => 'password' %>
          <span class="input-group-addon" style="border-left: 0; border-right: 0;">Password Confirmation</span>
          <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'password confirmation' %>
        </div>



      </br>
      <div><%= f.submit "Sign up", :class => 'btn btn-success btn-block' %>
      </div>
      <% end %>
    </div>


</div>
  <div class="push-footer">
  </div>
</div>
