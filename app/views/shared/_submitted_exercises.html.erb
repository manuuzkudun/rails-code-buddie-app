<% syntax_lang = @exercise.language.name.downcase.to_sym %>

<div class="container">
  <% @submissions.each do |submission|  %>
  <div class="row">
  <div class="submitted col-md-6">
      <h5><%= gravatar_for(submission.user)%><br><%= submission.user.email %></h5>
      <div class ="submission">
       <%= CodeRay.scan(submission.answer, syntax_lang).div.html_safe %>
      </div>
    </div>
  </div>
  <% end %>
</div>
