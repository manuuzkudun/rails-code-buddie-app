
<div class="container text-center">
<div class="row">
<div class ="col-md-12">
<h1> <%= @language.name %> </h1>
<div class ="row">
<%= image_tag(@language.icon, class: "lang-icons") %>
</div>

<table class="table table-hover">
<thead>
  <tr>
    <th>Exercise</th>
    <th>Description</th>
  </tr>
  </thead>
  <tbody>
<% @submission_array.each do |submission| %>
  <% exercise = submission[:exercise] %>
  <tr>
    <td><%= link_to exercise.title, exercise_path(exercise) %></td>
    <td><%= exercise.description %></td>
    <td><%= submission[:completed] %></td>
  </tr>
<% end %>
  </tbody>
</table>
</div>
</div>
</div>
